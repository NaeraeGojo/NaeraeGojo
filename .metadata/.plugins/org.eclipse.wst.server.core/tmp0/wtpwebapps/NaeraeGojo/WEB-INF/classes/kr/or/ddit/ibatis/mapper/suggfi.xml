<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap
    PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"      
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="suggfi">
	<typeAlias alias="suggfiVO" type="kr.or.ddit.vo.SuggestFileVO"/>
	
	<sql id="selectAll">
		select * 
			from suggfi
			where suggfi_delete = 'n' 
	</sql>

	<insert id="insertSuggfi" parameterClass="suggfiVO">
		<selectKey keyProperty="suggfi_code" resultClass="string">
			select suggfi_seq.nextval from dual
		</selectKey>
		
		insert into suggfi(
							suggfi_code
							,suggfi_save_name
							,suggfi_name
							,suggfi_volume
							,suggfi_doc_code
							,suggfi_kind_code
						)
		 
					values(
							 #suggfi_code#
							,#suggfi_save_name#
							,#suggfi_name#
							,#suggfi_volume#
							,#suggfi_doc_code#
							,#suggfi_kind_code#
					)
	</insert>
	
